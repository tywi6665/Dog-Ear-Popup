{
  "short_name": "Dog-Ear",
  "name": "Dog-Ear Recipe Extension",
  "description": "Recipe scraper and repository",
  "version": "0.0.1",
  "manifest_version": 2,
  "icons": {
    "16": "./graphics/icon16.png",
    "48": "./graphics/icon48.png",
    "128": "./graphics/icon128.png"
  },
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "./graphics/favicon.png",
    "default_popup": "popup.html"
  }
}